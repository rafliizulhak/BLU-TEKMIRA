<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".batubara">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                android:id="@+id/toolbarIcon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mineral"
                android:paddingTop="16dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jasa Pengolahan dan Pemanfaatan Mineral"
                android:layout_margin="8dp"
                android:id="@+id/mineral_jasa"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RDS (Rotary Drum Srubber)"
                android:layout_margin="8dp"
                android:id="@+id/mineral_rds"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilot Plant Hidrometalurgi"
                android:layout_margin="8dp"
                android:id="@+id/mineral_pilot"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pupuk Bio Organo Mineral"
                android:layout_margin="8dp"
                android:id="@+id/mineral_pupuk_bio"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pupuk Kiserit"
                android:layout_margin="8dp"
                android:id="@+id/mineral_pupuk_kiserit"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MICROtek (Micronized Perlite tekMIRA)"
                android:layout_margin="8dp"
                android:id="@+id/mineral_micro"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nugget/Spons Fe-Ni"
                android:layout_margin="8dp"
                android:id="@+id/mineral_nugget"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Kemitraan"
                android:layout_margin="8dp"
                android:id="@+id/mineral_mitra"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/video">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />

    </RelativeLayout>

</RelativeLayout>

